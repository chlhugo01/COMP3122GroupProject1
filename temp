mongo_payment:
      image: mongo_payment
      container_name: db_payment
      environment:
        MONGO_INITDB_ROOT_USERNAME: comp3122
        MONGO_INITDB_ROOT_PASSWORD: 23456
        MONGO_INITDB_DATABASE: admin
      volumes:
        - mongo_volume:/data_payment/db
      ports:
        - 27017:27118
    payment_service:
      image: payment_service
      container_name: service_payment
      build: ./payment_service
      volumes:
        - ./payment_service:/app
      ports:
        - 15000:15101
    
